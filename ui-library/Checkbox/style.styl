.checkbox
	&__icon
		color $checkbox-icon-default
		size(2.4rem)
		svg
			size(2.4rem)
	&__label
		display flex
		align-items center
		cursor pointer

	&__input
		opacity 0
		visibility hidden
		size(0)
		margin 0

	&__text
		text(m-14-02-l)
		color $checkbox-text-default
		margin-left 0.8rem
		
	&:hover &__icon
		color $checkbox-icon-hover
		
	&:hover &__text
		color $checkbox-text-hover


		
	&--active &__icon
		color $checkbox-icon-active

	&--active &__text
		color $checkbox-text-active

	&--active:hover &__icon
		color $checkbox-icon-active-hover

	&--active:hover &__text
		color $checkbox-text-active-hover


	&__input:checked + &__icon
		color $checkbox-icon-active

	&__input:not(:checked) + &__icon
		color $checkbox-icon-default

	&__input:checked + &__text
		color $checkbox-text-active

	&:hover &__input:checked + &__icon
		color $checkbox-icon-active-hover

	&:hover &__input:checked + &__text
		color $checkbox-text-active-hover